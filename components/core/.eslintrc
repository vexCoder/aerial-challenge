{
    "extends": ["app/node"],
    "parserOptions": {
      "project": "./tsconfig.json",
      "tsconfigRootDir": "./components/core",
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "ignorePatterns": ["**/*.d.*", "**/*.js", "src/app.ts", "forge.config.ts"],
    "rules": {
      "no-console": "off",
      "no-plusplus": "off",
      "class-methods-use-this": "off",
      "no-underscore-dangle": "off"
    },
    "settings": {
      "import/resolver": {
        "typescript": {
          "project": "components/core/tsconfig.json"
        }
      }
    }
  }
  